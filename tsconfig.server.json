{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "noImplicitAny": true,
        "module": "commonjs",
        "target": "es6",
        "experimentalDecorators": true,
        "jsx": "react",
        "emitDecoratorMetadata": true,
        "lib": ["es6", "dom"],
        "types": ["reflect-metadata", "node"],
        "strictNullChecks": true
    },
    "exclude": [
        "node_modules"
    ]
}
